<script>
  const socket = io();

  let currentLobbyCode = null;
  let isHost = false;
  let selectedDifficulty = null;
  let hasAnswered = false;

  // Difficulty select
  document.querySelectorAll('.diff-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.diff-btn').forEach(b => b.classList.remove('selected'));
      btn.classList.add('selected');
      selectedDifficulty = btn.dataset.diff;
    });
  });

  // Create lobby
  document.getElementById('btn-create').addEventListener('click', () => {
    if (!selectedDifficulty) {
      alert('Choisis une difficultÃ© !');
      return;
    }
    socket.emit('create_lobby', { difficulty: selectedDifficulty });
  });

  // Join lobby
  document.getElementById('btn-join').addEventListener('click', () => {
    const code = document.getElementById('input-code').value.trim().toUpperCase();
    if (!code) return;
    socket.emit('join_lobby', { code });
  });

  // Start game
  document.getElementById('btn-start').addEventListener('click', () => {
    socket.emit('start_game', { code: currentLobbyCode });
  });

  // Next question
  document.getElementById('btn-next').addEventListener('click', () => {
    socket.emit('next_question', { code: currentLobbyCode });
  });

  // Answer buttons
  document.querySelectorAll('.scale-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      if (hasAnswered) return;
      document.querySelectorAll('.scale-btn').forEach(b => b.classList.remove('selected'));
      btn.classList.add('selected');
      hasAnswered = true;
      document.querySelectorAll('.scale-btn').forEach(b => b.disabled = true);
      document.getElementById('waiting-others').style.display = 'block';
      socket.emit('send_answer', { code: currentLobbyCode, answer: parseInt(btn.dataset.val) });
    });
  });

  // --- SOCKET EVENTS ---

  socket.on('lobby_created', ({ code, difficulty }) => {
    isHost = true;
    currentLobbyCode = code;
    document.getElementById('display-code').textContent = code;
    setDiffBadge(difficulty);
    document.getElementById('host-start-section').classList.add('show');
    document.getElementById('guest-waiting').style.display = 'none';
    showScreen('screen-lobby');
  });

  socket.on('lobby_joined', ({ code, difficulty }) => {
    isHost = false;
    currentLobbyCode = code;
    document.getElementById('display-code').textContent = code;
    setDiffBadge(difficulty);
    document.getElementById('host-start-section').classList.remove('show');
    document.getElementById('guest-waiting').style.display = 'block';
    showScreen('screen-lobby');
  });

  socket.on('lobby_update', ({ playerCount }) => {
    document.getElementById('player-count').textContent = playerCount;
  });

  socket.on('error', ({ message }) => {
    const err = document.getElementById('join-error');
    err.textContent = message;
    err.classList.add('show');
    setTimeout(() => err.classList.remove('show'), 3000);

    const lobbyErr = document.getElementById('lobby-error');
    lobbyErr.textContent = message;
    lobbyErr.classList.add('show');
    setTimeout(() => lobbyErr.classList.remove('show'), 3000);
  });

  socket.on('new_question', ({ question, questionNumber }) => {
    hasAnswered = false;
    document.getElementById('question-num').textContent = `QUESTION ${questionNumber}`;
    document.getElementById('question-text').textContent = question;
    document.querySelectorAll('.scale-btn').forEach(b => {
      b.classList.remove('selected');
      b.disabled = false;
    });
    document.getElementById('waiting-others').style.display = 'none';
    showScreen('screen-question');
  });

  socket.on('show_results', ({ counts, total, question }) => {
    document.getElementById('results-question').textContent = question;

    const bars = document.getElementById('results-bars');
    bars.innerHTML = '';
    const max = Math.max(...Object.values(counts), 1);

    for (let i = 1; i <= 10; i++) {
      const count = counts[i] || 0;
      const pct = (count / max) * 100;
      bars.innerHTML += `
        <div class="bar-row">
          <div class="bar-label">${i}</div>
          <div class="bar-track">
            <div class="bar-fill" style="width:0%" data-pct="${pct}"></div>
          </div>
          <div class="bar-count">${count > 0 ? count : ''}</div>
        </div>`;
    }

    showScreen('screen-results');

    // Animate bars
    setTimeout(() => {
      document.querySelectorAll('.bar-fill').forEach(el => {
        el.style.width = el.dataset.pct + '%';
      });
    }, 100);

    // Host/guest UI
    if (isHost) {
      document.getElementById('host-next-section').classList.add('show');
      document.getElementById('guest-next-waiting').style.display = 'none';
    } else {
      document.getElementById('host-next-section').classList.remove('show');
      document.getElementById('guest-next-waiting').style.display = 'block';
    }
  });

  socket.on('new_host', ({ hostId }) => {
    if (socket.id === hostId) {
      isHost = true;
      document.getElementById('host-start-section').classList.add('show');
      document.getElementById('guest-waiting').style.display = 'none';
    }
  });

  // --- UTILS ---
  function showScreen(id) {
    document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
    document.getElementById(id).classList.add('active');
  }

  function setDiffBadge(diff) {
    const badge = document.getElementById('diff-badge-lobby');
    badge.className = `diff-badge ${diff}`;
    const labels = { soft: 'ðŸ˜‡ Soft', medium: 'ðŸ˜¬ Medium', hard: 'ðŸ’€ Hard' };
    badge.textContent = labels[diff];
  }
</script>
</body>
</html>
